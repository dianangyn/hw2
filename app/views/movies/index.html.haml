%h1 All Movies
-# add to end of app/views/movies/index.html.haml:
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    -# precheck all rating boxes to see all ratings 
    = check_box_tag "ratings[#{rating}]", "1", checked = @ratings_array.member?(rating)
  = submit_tag 'Refresh', :id => 'ratings_submit'


%h1 Search TMDb for a movie

= form_tag :action => 'search_tmdb' do

  %label{:for => 'search_terms'} Search Terms
  = text_field_tag 'search_terms'
  = submit_tag 'Search TMDb'

%table#movies
  %thead
    %tr
      %th{:class => @title_header_class}= link_to "Movie Title", movies_path(:sort_by => :title), :id => 'title_header'
      %th Rating
      %th{:class => @release_date_header_class}= link_to "Release Date", movies_path(:sort_by => :release_date), :id => 'release_date_header'
      %th More Info

  %tbody
    - @movies.each do |movie|
      %tr
      %td= movie.title 
      %td= movie.rating
      %td= movie.release_date
      %td= link_to "More about #{movie.title}", movie_path(movie)
    = link_to 'Add new movie', new_movie_path
